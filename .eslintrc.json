{
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "parser": "babel-eslint"
    },
    "env": {
        "node": true,
        "mocha": true
    },
    "extends": [
        "standard"
    ],
    "plugins": [
        "standard",
        "mocha",
        "chai-friendly"
    ],
    "rules": {
        "indent": ["warn", 4],
        "arrow-parens": 1
    },
    "overrides": [{
        "files": ["**/tests/*.test.js"],
        "rules": {
            "mocha/handle-done-callback": "error",
            "mocha/no-identical-title": "warn",
            "mocha/no-exclusive-tests": "warn",
            "mocha/no-skipped-tests": "error",

            "no-unused-expressions": 0,
            "chai-friendly/no-unused-expressions": "error",

            "no-new": 0
        }
    }]

}